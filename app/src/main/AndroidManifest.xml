<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rowicka.gitartuner">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_guitar"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_guitar_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Material.NoActionBar.Fullscreen">
        <activity android:name=".utility.InfoActivity"></activity>
        <activity
            android:name=".leaderboard.LeaderboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".profile.SelectAvatarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".profile.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".profile.RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".profile.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".learning.ShowChordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".learning.BasicLearningActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".learning.ListOfChordsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".metronome.MetronomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tuner.TunerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>