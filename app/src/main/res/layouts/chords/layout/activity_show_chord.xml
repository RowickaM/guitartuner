<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top_nav"
        layout="@layout/top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/chordName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nazwa akordu"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="prÃ³ba 1/4"
                android:textAlignment="textEnd"
                android:textColor="@color/green"
                android:textSize="18sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/chordSchema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stringChord1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/background_light" />

            <TextView
                android:id="@+id/stringChord2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/background_light" />

            <TextView
                android:id="@+id/stringChord3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/background_light" />

            <TextView
                android:id="@+id/stringChord4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/background_light"/>

            <TextView
                android:id="@+id/stringChord5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/background_light"/>

            <TextView
                android:id="@+id/stringChord6"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/background_light"/>

        </LinearLayout>
    </LinearLayout>
    <include
        android:id="@+id/bottom_nav"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>