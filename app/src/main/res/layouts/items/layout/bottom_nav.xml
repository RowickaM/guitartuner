<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green"
    android:gravity="center"
    android:padding="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/toTuner"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/tuner_ico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tuner"

            />

        <TextView
            android:id="@+id/tuner_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tuner"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/toMetronome"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/metronome_ico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_metronome" />

        <TextView
            android:id="@+id/metronome_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/metronome"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/toLearn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/learn_ico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chords" />

        <TextView
            android:id="@+id/learn_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chord"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/toInfo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/info_ico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info" />

        <TextView
            android:id="@+id/info_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>